<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookmarkContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.yotchang4s.android.ObservableGridView
        android:id="@+id/bookmarkGridview"
        style="@style/Yapix.Illust.GridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/bookmarkQuickReturnSticky"
        style="@style/Yapix.QuickReturn.Sticky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/bookmarkPrivacyTypeText"
            style="@style/Yapix.QuickReturn.Sticky.Text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" >

            <!-- ダミー -->
        </TextView>

        <Switch
            android:id="@+id/bookmarkPrivacyTypeSwitch"
            style="@style/Yapix.QuickReturn.Sticky.Switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
        </Switch>
    </LinearLayout>

</FrameLayout>
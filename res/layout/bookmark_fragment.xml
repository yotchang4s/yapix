<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.yotchang4s.android.ObservableGridView
        android:id="@+id/bookmarkGridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#09C"
        android:clipToPadding="false"
        android:columnWidth="100dp"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="auto_fit"
        android:paddingBottom="5dp"
        android:paddingTop="55dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2.5dp" />

    <LinearLayout
        android:id="@+id/bookmarkQuickReturnSticky"
        style="@style/QuickReturn.Sticky" >

        <TextView
            android:id="@+id/bookmarkPrivacyTypeText"
            style="@style/QuickReturn.Sticky.Text" >

            <!-- ダミー -->
        </TextView>

        <Switch
            android:id="@+id/bookmarkPrivacyTypeSwitch"
            style="@style/QuickReturn.Sticky.Switch" />
    </LinearLayout>

</FrameLayout>
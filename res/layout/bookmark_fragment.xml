    android:layout_height="match_parent" >

    <org.yotchang4s.android.ObservableGridView
        android:id="@+id/bookmarkGridview"
        style="@style/Yapix.Widget.IllustGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/bookmarkQuickReturnSticky"
        style="@style/Yapix.Widget.QuickReturn.Sticky" >

        <TextView
            android:id="@+id/bookmarkPrivacyTypeText"
            style="@style/Yapix.Widget.QuickReturn.Sticky.Text" >

            <!-- ダミー -->
        </TextView>

        <Switch
            android:id="@+id/bookmarkPrivacyTypeSwitch"
            style="@style/Yapix.Widget.QuickReturn.Sticky.Switch" />
    </LinearLayout>

</FrameLayout>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Yapix.QuickReturn">
        <item name="android:background">@color/textColor</item>
    </style>

    <style name="Yapix.QuickReturn.Sticky" />

    <style name="Yapix.QuickReturn.Sticky.Spinner">
        <item name="android:paddingLeft">30sp</item>
    </style>

    <style name="Yapix.QuickReturn.Sticky.Text" parent="Yapix.Widget.TextView.Reverse">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">30sp</item>
    </style>

    <style name="Yapix.QuickReturn.Sticky.Switch">
        <item name="android:focusable">false</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textOn">@string/r18</item>
        <item name="android:textOff">@string/general</item>
        <item name="android:paddingRight">5sp</item>
    </style>

</resources>